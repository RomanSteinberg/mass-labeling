<% if (user.role === 'admin') { %>
	<h1><%= getText('broken_sites') %></h1>

	<div class="row">
		<div class="col-xs-6">
			<table class="table">
				<tr>
					<td><%= getText('unchecked') %></td>
					<td><%= brokenCount %></td>
				</tr>
			</table>
		</div>
	</div>
	<a href="/broken" class="btn btn-primary"><%= getText('check_sites') %></a>
	<br><br>
<% } %>

<h1><%= getText('scored_sites_title') %></h1>
<div class="row">
	<div class="col-xs-6">
		<table class="table">
			<tr>
				<td><%= getText('scored') %></td>
				<td><%= markupCount %></td>
			</tr>
		</table>
	</div>
</div>
