<!DOCTYPE html>


<title>Sliders</title>


<link rel="stylesheet" href="<%= fromPublic('bundles/css/slider.css') %>">


<div id="app" class="_sl-app">
	<div class="_sl-nav _sl-nav-prev" @click="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</div>

	<div class="_sl-nav _sl-nav-next" @click="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</div>


	<div class="_sl-root">
    <div class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <ul class="nav navbar-nav">
          <li>
            <a href="/config">
              <%= getText('nav_back') %>
            </a>
          </li>
        </ul>

        <div class="navbar-right">
          <% include ./partials/lang-switcher %>
        </div>
      </div>
    </div>

    <div class="_sl-root-content">
      <div class="_sl-image">
        <img :src="screenshot">
      </div>
      <div class="_sl-info">
        <p><span><%= getText('site') %>:</span> <span><a :href="item.url" id="url" target="_blank">{{item.url}}</a></span></p>
        <p><span><%= getText('model_score') %>:</span> <span>{{modelScoreStr}}</span></p>
        <p><span><%= getText('assessors_mean_score') %>:</span> <span>{{meanAssessorsScoreStr}}</span></p>
        <p><span><%= getText('error') %>:</span> <span>{{errorStr}}</span></p>
        <p><span><%= getText('assessors_scores') %>:</span> <span>{{assessorsScoreStr}}</span></p>
      </div>
    </div>
	</div>
</div>


<script>
	window.items = <%- JSON.stringify(items) %>;
  window.signs = <%- JSON.stringify(frontSigns()) %>;
</script>

<script src="<%= fromPublic('bundles/vendor.js') %>"></script>
<script src="<%= fromPublic('bundles/slider.js') %>"></script>
