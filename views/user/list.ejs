<h1>Пользователи</h1>
<div class="form-group">
	<a href="/user/add" type="button" class="btn btn-primary">Добавить пользователя</a>
</div>

<div class="row">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>E-mail</th>
				<th>Статус</th>
				<th>Роль</th>
				<th>Действия</th>
			</tr>
		</thead>
		<tbody>
			<% users.forEach(curUser => { %>
				<tr class="<%= curUser.status === 'disabled' ? 'text-muted' : ''%> <%= curUser.role === 'admin' ? 'text-bold' : ''%>">
					<td><%= curUser.email %></td>
					<td><%= statuses[curUser.status] %></td>
					<td><%= roles[curUser.role] %></td>
					<td>
						<a href="/user/<%= curUser.id %>/edit" type="button" class="btn btn-warning btn-xs">Изменить</a>
						<button type="button" class="btn btn-primary btn-xs create-slider" data-id="<%= curUser.id %>">Сгенерировать слайдер</button>
						<a href="/slider/<%= curUser.email %>" type="button" class="btn btn-success btn-xs">Открыть слайдер</a>
					</td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>


<script src="<%= fromPublic('js/user/list.js') %>"></script>
